<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <h2>会員情報編集</h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-8">
      <%= form_with(model:@member, url:admin_member_path(@member), method: :patch) do |f| %>
        <div class="form-group">
          <%= f.label "会員名（表示名）" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "自己紹介" %>
          <%= f.text_area :introduction, class: "form-control", rows: 5 %>
        </div>
        <div class="form-group">
          <%= f.label "メールアドレス" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "利用状況", class: "mr-5" %>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active_true, "利用可能" %>
          <%= f.radio_button :is_active, false, class: "ml-3" %>
          <%= f.label :is_active_false, "利用停止" %>
        </div>
        <div class="actions text-center">
          <%= f.submit "編集内容を保存", class: "btn btn-success", "data-confirm" => "編集内容を保存しますか？" %>
        </div>
      <% end %>
    </div>
  </div>
</div>