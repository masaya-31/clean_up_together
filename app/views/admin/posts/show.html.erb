<div class="container bg-white py-3 rounded">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <%= render 'public/posts/show_title', post: @post %>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <%= render 'public/posts/show_image', post: @post %>
  </div>
  <div class="row justify-content-center my-3">
    <div class="col-lg-10">
      <%= render 'public/posts/show_body', post: @post %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <!--コメント一覧表示-->
      <div class="d-flex mb-3">
        <h5>コメント一覧</h5>
        <span class="ml-5 post-comments-counter">
          <%= render 'public/post_comments/counter', post: @post %>
        </span>
      </div>
      <div class="post-comments-index">
        <%= render 'public/post_comments/index', post: @post, post_comments: @post_comments %>
      </div>
    </div>
  </div>
</div>