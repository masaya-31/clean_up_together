<div class="container">
  <div class="row justify-content-center pt-5">
    <div>
      <%= form_with(model:@member, url:member_path, method: :patch) do |f| %>
        <table class="table table-borderless">
          <tr>
            <td>名前（表示名）</td>
          </tr>
          <tr>
            <td><%= f.text_field :name, autofocus: true, class: "form-control" %></td>
          </tr>
          <tr>
            <td>自己紹介</td>
          </tr>
          <tr>
            <td><%= f.text_area :introduction, class: "form-control", rows: 3 %></td>
          </tr>
        </table>
        <div class="actions text-center">
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center pt-5">
    <h2>ログイン情報編集</h2>
  </div>
</div>