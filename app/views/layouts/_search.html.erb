<% if admin_signed_in? %>
  <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select({ "会員"=> "member", "投稿記事" => "post" }) %>
    <div class="text-right"><%= submit_tag '検索', class: "btn btn-primary mt-2" %></div>
  <% end %>
<% else %>
  <%= form_with url: posts_path, method: :get, local: true do |f|%>
    <div class="input-group">
      <%= f.text_field :keyword, value: @keyword, class: "form-control search-control", placeholder: "キーワードを入力" %>
      <span class="input-group-btn input-group-append">
        <%= button_tag type: "submit", class: "btn btn-secondary search-btn" do %>
          <i class="fas fa-search"></i> 検索</submit>
        <% end %>
      </span>
    </div>
  <% end %>
<% end %>