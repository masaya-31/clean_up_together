<div class="container my-5">
  <div class="row">
    <div class="col-8">
      <div class="d-flex">
        <h2>記事一覧</h2>
        <% if member_signed_in? %>
          <div class="ml-5"><%= link_to "新規投稿", new_post_path, class: "btn btn-success" %></div>
        <% end %>
      </div>
      <%= render "index", posts: @posts %>
    </div>
    <div class="col-4">
      <div class="sidebar" style="background-color: orange;">
        <h2>タグサイドバー</h2>
      </div>
    </div>
  </div>
</div>