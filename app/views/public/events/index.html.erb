<h1>Public::Events#index</h1>
<p>Find me in app/views/public/events/index.html.erb</p>

<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>
  <% events.each do |event| %>
    <div><%= event.title %></div>
  <% end %>
<% end %>

<%= form_with(model: @event, url:member_events_path, method: :post, local: true) do |f| %>
  <%= f.label "タイトル" %>
  <%= f.text_field :title %>

  <%= f.label "作業日" %>
  <%= f.datetime_select :start_time %>

  <div>
    <%= f.submit "作成する" %>
  </div>

<% end %>