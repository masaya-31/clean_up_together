<div class="form-group">
  <h5><strong><%= f.label "掃除用具(必須)" %></strong></h5>
  <%= f.text_field :tool, class: "form-control" %>
</div>
<div class="form-group">
  <h5><strong><%= f.label "掃除方法(必須)" %></strong></h5>
  <%= f.text_area :body, class: "form-control", rows: 20 %>
</div>
<div class="form-group">
  <h5><strong><%= f.label "タグ　(、(読点)を入力することで複数のタグを付けることができます。)" %></strong></h5>
  <%= f.text_field :name, value: tag_list, class: "form-control" %>
</div>
<div class="text-right">
  <%= f.radio_button :is_publish, true, checked: true %>
  <%= f.label :is_publish_true, "公開" %>
  <%= f.radio_button :is_publish, false, class: "ml-3" %>
  <%= f.label :is_publish_false, "非公開" %>
  <%= f.submit "作成する", class: "ml-3" %>
</div>