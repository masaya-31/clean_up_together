<div class="home-top">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-right d-flex justify-content-end">
        <div class="top_header_bottom mb-3 mr-3">
          <div class="mb-3">
            <% if admin_signed_in? %>
              <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
                <%= f.text_field :content %>
                <%= f.select :model, options_for_select({ "会員"=> "member", "投稿記事" => "post" }) %>
                <%= submit_tag '検索', class: "btn btn-primary" %>
              <% end %>
            <% else %>
              <%= render 'layouts/search' %>
            <% end %>
          </div>
          <div>
            <% unless member_signed_in? || admin_signed_in? %>
              <div class="mt-3">
                <%= link_to 'ゲストログイン', members_guest_sign_in_path, method: :post, class: "btn btn-primary form-control" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>