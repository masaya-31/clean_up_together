<div class="container">
  <div class="row">
    <div class="col bg-white py-3 rounded">
      <h2>タグ一覧</h2>
      <div class="d-flex flex-wrap">
        <% @tags.each do |tag| %>
          <% unless tag.posts.count == 0 %>
            <div class="d-flex m-2">
              <h4><%= link_to tag.name, admin_posts_path(tag_id: tag.id), class: "bg-light p-2 text-dark" %></h4>
              <p class="mr-3"><%= link_to '削除', admin_tag_path(tag), method: :delete, class: "btn-sm btn-danger" %></p>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @tags, theme: 'bootstrap-5' %>
      </div>
    </div>
  </div>
</div>