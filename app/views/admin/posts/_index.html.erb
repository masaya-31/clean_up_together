<% posts.each do |post| %>
  <div class="d-flex m-2 p-2 rounded shadow">
    <div class="mx-3 index_post_image">
      <%= link_to admin_post_path(post) do %>
        <%= image_tag post.get_after_image(130,100) %>
      <% end %>
    </div>
    <div>
      <div>
        <%= link_to admin_post_path(post) do %>
          <%= post.title %>
        <% end %>
        <span class="ml-3">
          公開状態：
          <% if post.is_publish == true %>
            <span>公開</span>
          <% else %>
            <span>非公開</span>
        　<% end %>
        </span>
      </div>
      <div>
        <span class="ml-3">投稿者:</span>
        <%= link_to edit_admin_member_path(post.member_id) do %>
          <%= post.member.name %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>