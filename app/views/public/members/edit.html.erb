<div class="container">
  <div class="row">
    <div class="col-lg-3 mb-3">
      <%= render 'public/members/edit_sidebar', member: @member %>
    </div>
    <div class="col-lg-6">
      <div class="bg-white p-3 rounded mb-3">
        <h5 class="mb-3"><strong>プロフィール編集</strong></h5>
        <%= form_with(model:@member, url:members_path, method: :patch) do |f| %>
          <div class="form-group">
            <%= f.label "名前（表示名）" %>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "自己紹介" %>
            <%= f.text_area :introduction, class: "form-control", rows: 5 %>
          </div>
          <div class="actions text-center">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>