<div class="container">
  <div class="row justify-content-center pt-5">
    <div class="col-lg-6">
      <%= form_with(model:@member, url:member_path, method: :patch) do |f| %>
        <div class="form-group">
          <strong><%= f.label "プロフィール情報編集" %></strong>
        </div>
        <div class="form-group">
          <%= f.label "名前（表示名）" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "自己紹介" %>
          <%= f.text_area :introduction, class: "form-control", rows: 5 %>
        </div>
        <div class="actions text-center">
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center pt-5">
    <div class="col-lg-6">
      <table class="table table-borderless">
        <tr>
          <th>ログイン情報編集</th>
        </tr>
        <tr>
          <td>メールアドレス</td>
        </tr>
        <tr>
          <td><%= @member.email %></td>
          <td><%= link_to "変更", email_edit_member_path %></td>
        </tr>
        <tr>
        <!--  <td>パスワード</td>-->
        <!--</tr>-->
        <!--<tr>-->
        <!--  <td>＊＊＊＊＊＊＊＊</td>-->
        <!--  <td>< link_to "変更", password_edit_member_path ></td>-->
        <!--</tr>-->
      </table>
    </div>
  </div>
</div>