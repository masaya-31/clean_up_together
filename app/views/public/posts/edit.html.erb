<div class="container bg-white py-3 rounded">
  <%= render "public/shared/error_messages", resource: @post %>
  <%= form_with(model:@post, url:post_path, method: :patch) do |f| %>
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <%= render 'public/posts/title_form', f: f %>
      </div>
    </div>
    <div class="row justify-content-center mt-3">
      <div class="col-lg-4">
        <div class="form-group">
          <h5><strong><%= f.label "作業前画像(任意)" %></strong></h5>
          <% if @post.before_image.attached? %>
            <%= image_tag @post.get_before_image(300,300) %>
          <% end %>
          <div><%= f.file_field :before_image, accept: "image/*" %></div>
        </div>
      </div>
      <div class="col-lg-4">
        <h5><strong><%= f.label "作業後画像(必須)" %></strong></h5>
        <%= image_tag @post.get_after_image(300,300) %>
        <div><%= f.file_field :after_image, accept: "image/*" %></div>
      </div>
    </div>
    <div class="row justify-content-center mt-3">
      <div class="col-lg-10">
        <%= render 'public/posts/body_form', f: f, tag_list: @tag_list %>
      </div>
    </div>
  <% end %>
</div>