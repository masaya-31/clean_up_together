<div class="container">
  <span class="bg-white rounded <%= flash[:color] %>", style="font-size : larger"><%= flash[:notice] %></span>
  <div class="row">
    <div class="col-3">
      <%= render 'public/members/sidebar', member: @member %>
    </div>
    <div class="col-9">
        <%= render 'public/members/transition', member: @member %>
      <div class="bg-white p-3 rounded">
        <div class="d-flex">
          <h2>投稿記事一覧</h2>
          <% if @member == current_member %>
            <div class="ml-5">
              <%= link_to "新規投稿", new_post_path, class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
        <div>
          <%= render "public/posts/index", posts: @posts %>
        </div>
        <div class="d-flex justify-content-center mt-4">
          <%= paginate @posts, theme: 'bootstrap-5' %>
        </div>
      </div>
    </div>
  </div>
</div>