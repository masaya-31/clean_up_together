<div class="container">
  <div class="row">
    <div class="col-12 bg-white p-3 rounded">
      <% if @members.blank? %>
        <h2>フォローしている会員がいません。</h2>
      <% else %>
        <h2>フォロー会員一覧</h2>
        <table class="table table-bordered">
          <thead class="thead-light">
            <tr>
              <th>名前（表示名）</th>
              <th>投稿数</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @members.each do |member| %>
              <tr>
                <td>
                  <%= link_to member_path(member) do %>
                    <%= member.name %></td>
                  <% end %>
                <td>
                  <%= link_to member_path(member) do %>
                    <%= member.posts.count %>
                  <% end %>
                </td>
                <% if current_member == @member %>
                  <td>
                    <%= render 'public/relationships/form', member: member %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @members, theme: 'bootstrap-5'%>
      </div>
    </div>
  </div>
</div>