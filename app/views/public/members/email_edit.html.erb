<div class="container">
  <div class="row">
    <div class="col-lg-3 mb-3">
      <%= render 'public/members/edit_sidebar', member: @member %>
    </div>
    <div class="col-lg-6">
      <div class="bg-white p-3 rounded">
        <h5 class="mb-4"><strong>ログイン情報編集</strong></h5>
        <%= form_with(model:@member, url:email_update_members_path, method: :patch) do |f| %>
          <div class="form-group">
            <%= f.label "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
          <div class="actions text-center">
            <%= f.submit "メールアドレスを変更", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>