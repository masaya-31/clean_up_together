<% if post.favorited_by?(current_member) %>
  <%= link_to "お気に入り削除", post_favorites_path(post), method: :delete, remote: true, class: "btn-sm btn-secondary ml-4" %>
<% else %>
  <%= link_to "お気に入り登録", post_favorites_path(post), method: :post, remote: true, class: "btn-sm btn-success ml-4" %>
<% end %>