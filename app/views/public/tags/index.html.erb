<div class="container">
  <div class="row">
    <div class="col bg-white py-3 rounded">
      <h2>タグ一覧</h2>
      <div class="d-flex flex-wrap">
        <% @tags.each do |tag| %>
          <% unless tag.posts.count == 0 %>
            <h4 class="m-2"><%= link_to tag.name, posts_path(tag_id: tag.id), class: "bg-light p-2 text-dark" %></h4>
          <% end %>
        <% end %>
      </div>
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @tags, theme: 'bootstrap-5' %>
      </div>
    </div>
  </div>
</div>