<div class="container">
  <div class="row justify-content-center">
    <div class="col-8 bg-white py-3 rounded">
      <%= render "public/shared/error_messages", resource: @event %>
      <%= form_with(model: @event, url:event_path, method: :patch, local: true) do |f| %>
        <div>
          <h3><%= f.label "タイトル" %></h3>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mt-3">
          <h3><%= f.label "作業日" %></h3>
          <%= f.date_field :start_time %>
        </div>

        <div class="mt-3">
          <h3><%= f.label "参考記事" %></h3>
          <div>
            <%= f.radio_button :select_post, Event.select_posts.key(0), checked: true %>
            <%= f.label :select_post_no_post, Event.select_posts_i18n[:no_post] %>
          </div>

          <div>
            <% if current_member.posts.present? %>
              <%= f.radio_button :select_post, Event.select_posts.key(1) %>
              <%= f.label :select_post_my_post, Event.select_posts_i18n[:my_post] %>
              <%= select_tag :member_post_id, options_from_collection_for_select(current_member.posts, :id, :title, { :selected => @event.post_id.to_i }), prompt: "記事を選択してください" %>
            <% end %>
          </div>

          <div>
            <% if @favorite_posts.present? %>
              <%= f.radio_button :select_post, Event.select_posts.key(2) %>
              <%= f.label :select_post_favorite_post, Event.select_posts_i18n[:favorite_post] %>
              <%= select_tag :favorite_post_id, options_from_collection_for_select(@favorite_posts, :id, :title, { :selected => @event.post_id.to_i }), prompt: "記事を選択してください" %>
            <% end %>
          </div>
        </div>

        <div class="mt-3">
          <%= f.submit "更新する" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= link_to "カレンダーに戻る", events_path %>
      </div>
    </div>
  </div>
</div>