<div class="container">
  <div class="row">
    <div class="col-md-3 mb-3">
      <%= render 'public/members/sidebar', member: @member %>
    </div>
    <div class="col-md-9">
      <%= render 'public/members/transition', member: @member %>
      <div class="bg-white p-3 rounded">
        <div class="d-flex">
          <h2>お気に入り記事</h2>
        </div>
        <div>
          <%= render "public/posts/index", posts: @posts %>
        </div>
        <div class="d-flex justify-content-center mt-4">
          <%= paginate @posts, theme: 'bootstrap-5' %>
        </div>
      </div>
    </div>
  </div>
</div>